# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Database Connection
# Transaction mode (for migrations and connection pooling)
DATABASE_URL=postgres://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# Session mode (for Prisma Client)
DIRECT_URL=postgres://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# Google AI API Key
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=AIzaSy...

# App Configuration
# Base URL for the application (used for callbacks, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
# Options: development, production, test
NODE_ENV=development

# Admin Configuration
# Secret key for admin API endpoints (/api/admin/*)
# IMPORTANT: Change this in production to a strong random string
ADMIN_SECRET_KEY=change-this-in-production-use-openssl-rand-base64-32

# Optional: Error Tracking (Sentry)
# Sign up at: https://sentry.io
# Leave empty to disable error tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Optional: Analytics
# Vercel Analytics is enabled by default on Vercel deployments
# No configuration needed

# Optional: Feature Flags
# Enable/disable features for testing
NEXT_PUBLIC_ENABLE_AI=true
NEXT_PUBLIC_ENABLE_EXPORT=true
