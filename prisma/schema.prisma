generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Note {
  id        String   @id @default(uuid())
  userId    String   // Supabase user ID
  content   String
  type      String   @default("text") // "text" | "url"
  url       String?
  title     String?
  summary   String?
  topics    String?  // JSON string
  tags      String?  // JSON string (Manual tags)
  embedding String?  // JSON string
  createdAt DateTime @default(now())
  status    String   @default("processing") // "processing" | "ready" | "error"
  
  // Full-text search vector (managed by PostgreSQL trigger)
  search_vector Unsupported("tsvector")?

  // Relations
  outgoingEdges Edge[] @relation("SourceEdges")
  incomingEdges Edge[] @relation("TargetEdges")

  @@index([userId])
  @@index([status])
}

model Edge {
  id          String   @id @default(uuid())
  sourceId    String
  targetId    String
  similarity  Float
  explanation String
  createdAt   DateTime @default(now())

  @@unique([sourceId, targetId])
  source      Note     @relation("SourceEdges", fields: [sourceId], references: [id], onDelete: Cascade)
  target      Note     @relation("TargetEdges", fields: [targetId], references: [id], onDelete: Cascade)

  @@index([sourceId])
  @@index([targetId])
}

model UserSubscription {
  id            String   @id @default(uuid())
  userId        String   @unique // Supabase user ID
  tier          String   @default("free") // "free" | "premium"
  noteCount     Int      @default(0) // Current note count for usage tracking
  maxNotes      Int?     // Null for unlimited (premium), number for free
  aiEnabled     Boolean  @default(false) // AI features enabled
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([tier])
}

